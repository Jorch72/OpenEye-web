<!DOCTYPE html>
<html lang="en">
    <head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>OpenEye</title>

    {% block styles %}
        <link href="{{ relative('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ relative('css/bootstrap.vertical-tabs.css') }}" rel="stylesheet">
    {% endblock %}

        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}
    </head>
    <body role="document">
        <div class="container" role="main">

      {% block main %}
            <div class="row">
                <div class="col-md-12">
          {% for mod in mods %}
                    <div class="media">
                        <a class="pull-left" href="#">
                            <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," style="width: 64px; height: 64px;">
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading">{{ mod.name }}{% if mod.authors|length > 0 %} <small>by {{ mod.authors|join(', ') }}</small>{% endif %}</h4>
              {{ mod.description }}
                        </div>
                    </div>
          {% endfor %}
                </div>
            </div>
      {% endblock %}
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="{{ relative('js/bootstrap.min.js') }}"></script>
    </body>
</html>