{% extends 'base.twig' %}
{% block main %}
<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>Most popular in the past hour</h1>
        </div>
    </div>
    <div class="col-md-9">
        {% for row in mods|batch(2) %}
            <div class="row" style="margin: 30px 0;">
                {% for mod in row %}
                    <div class="col-md-6">
                        
                        <div class="media">
                          <a class="pull-left" href="{{ relative('mod/' ~ mod._id) }}">
                            <img src="{% if mod.image %}{{ relative(mod.image) }}{% else %}http://placehold.it/64x64{% endif %}" alt="">
                          </a>
                          <div class="media-body">
                            <h4 class="media-heading"><a href="{{ relative('mod/' ~ mod._id) }}">{{ mod.name }}</a>{% if mod.authors|length > 0 %} <small>by {{ mod.authors|join(', ') }}</small>{% endif %}</h4>
                            <p>{{ mod.description }}</p>
                          {% if mod.tags|length > 0 %}
                              <p>
                                {% for tag in mod.tags %}
                                    <span class="label label-info">{{ tag }}</span> 
                                {% endfor %}
                              </p>
                          {% endif %}
                          </div>
                        </div>
                        
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    <div class="col-md-3">
        <div id="sidenav" data-spy="affix" data-offset-top="50">
          <strong>Find by name:</strong>
          <ul class="nav nav-home">
              {% for letter in range('A', 'Z') %}
                <li><a href="#{{ letter }}">{{ letter }}</a></li>
              {% endfor %}
          </ul>
          <strong>Find by tag:</strong>
          <ul class="nav nav-home">
            <li><a href="#">magic</a></li>
            <li><a href="#">tech</a></li>
            <li><a href="#">random</a></li>
            <li><a href="#">util</a></li>
            <li><a href="#">library</a></li>
            <li><a href="#">addon</a></li>
          </ul>
        </div>
    </div>
</div>
{% endblock %}