{
    "type": "object",
    "additionalProperties": true,
    "$schema": "http://json-schema.org/draft-03/schema",
    "properties": {
        "type": {
            "type": "string",
            "required": true
        },
        "branding": {
            "type": "string",
            "required": true
        },
        "forge": {
            "type": "string",
            "required": true
        },
        "language": {
            "type": "string",
            "required": true
        },
        "locale": {
            "type": "string",
            "required": true
        },
        "minecraft": {
            "type": "string",
            "required": true
        },
        "timezone": {
            "type": "string",
            "required": true
        },
        "files": {
            "type": "array",
            "items": {
                "type": "object",
                "required": true,
                "additionalProperties": true,
                "properties": {
                    "signature": {
                        "type": "string",
                        "required": true
                    },
                    "filename": {
                        "type": "string",
                        "required": true
                    },
                    "filesize": {
                        "type": "number",
                        "required": true
                    },
                    "mods": {
                        "type": "array",
                        "required": true,
                        "items": {
                            "type": "object",
                            "additionalProperties": true,
                            "properties": {
                                "modId": {
                                    "type": "string",
                                    "required": true
                                },
                                "version": {
                                    "type": "string",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}