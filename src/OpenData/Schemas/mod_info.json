{
    "type": "object",
    "additionalProperties": true,
    "$schema": "http://json-schema.org/draft-03/schema",
    "properties": {
        "type": {
            "type": "string",
            "required": true
        },
        "signature": {
            "type": "string",
            "required": true
        },
        "filename": {
            "type": "string",
            "required": true
        },
        "filesize": {
            "type": "number",
            "required": true
        },
        "classTransformers": {
            "type": "array",
            "required": false,
            "items": {
                "type": "string",
                "required": false
            }
        },
        "tweakers": {
            "type": "array",
            "required": false,
            "items": {
                "type": "object",
                "required": false,
                "properties": {
                    "class": {
                        "type": "string",
                        "required": false
                    },
                    "plugin": {
                        "type": "string",
                        "required": false
                    }
                }
            }
        },
        "mods": {
            "type": "array",
            "required": true,
            "items": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                    "modId": {
                        "type": "string",
                        "required": true
                    },
                    "version": {
                        "type": "string",
                        "required": true
                    }
                }
            }
        },
        "packages": {
            "type":"array",
            "required":false,
            "items": {
                "type":"string",
                "required":true
            }
        }
    }
}